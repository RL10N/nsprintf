citHeader("To cite package 'nsprintf' in publications use:")
     
 year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
 vers <- paste("R package version", meta$Version)
 
 citEntry(entry="Manual",
		  title = "nsprintf: Easy Internationalized Message Pluralization",
		  author = personList(as.person("Thomas J. Leeper")),
		  year = year,
		  note = vers,
		  textVersion =
		  paste("Thomas J. Leeper (",
				year,
				"). nsprintf: Easy Internationalized Message Pluralization. ",
				vers, ".", sep=""))
